{
  "manifest_version": 3,

  "name": "Jotter",
  "description": "Jot down multiple notes with a simple notepad.",
  "version": "2.0.4",

  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Jotter",
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },

  "permissions": ["storage"]
}

{
  "manifest_version": 2,

  "name": "Jotter",
  "description": "Jot down multiple notes with a simple notepad.",
  "version": "2.0.2",

  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "index.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },

  "permissions": ["storage"]
}
